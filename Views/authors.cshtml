@{
  Layout="Shared/_Layout.cshtml";
}

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Epicodus Library</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/books">All Books</a></li>
      <li><a href="/patrons">All Patrons</a></li>
      <li><a href="/authors">All Authors</a></li>
    </ul>
  </div>
</nav>

<h1>All Authors</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Books</th>
    </tr>
  </thead>
  <tbody>
    @{
      foreach(var author in Model)
      {
        <tr>
          <td><a href="/author/@author.GetId()">@author.GetLastName(), @author.GetFirstName()</a></td>
          <td>
            @foreach (var book in @author.GetBooks())
            {
              <p><a href="/book/@book.GetId()">@book.GetTitle()</a></p>
            }
          </td>
        </tr>
      }
    }
  </tbody>
</table>
