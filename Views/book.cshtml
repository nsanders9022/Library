@{
    Layout="Shared/_Layout.cshtml";
}

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Epicodus Library</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/books">All Books</a></li>
      <li><a href="/patrons">All Patrons</a></li>
      <li><a href="/authors">All Authors</a></li>
    </ul>
  </div>
</nav>

<h2>@Model.GetTitle()</h2>


<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Author(s)</th>
      <th>Copies</th>
    </tr>
  </thead>
  <tbody>
    <tr>
          <td>
            @foreach(var author in @Model.GetAuthors())
            {
              <p>@author.GetLastName(), @author.GetFirstName()</p>
            }
          </td>
          <td>@Model.CountCopies()</td>
        </tr>
  </tbody>
</table>
