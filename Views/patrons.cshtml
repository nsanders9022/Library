@{
    Layout="Shared/_Layout.cshtml";
}

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Epicodus Library</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/books">All Books</a></li>
      <li><a href="/patrons">All Patrons</a></li>
      <li><a href="/authors">All Authors</a></li>
    </ul>
  </div>
</nav>


<h1>All patrons</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
        <th>Name</th>
    </tr>
  </thead>
  <tbody>
    @{
      foreach(var patron in Model)
      {
        <tr>
        <td><a href="/patron/@patron.GetId()">@patron.GetLastName(), @patron.GetFirstName()</a></td>
        </tr>
      }
    }
  </tbody>
</table>

<h3>Add a new patron</h3>
<form action="/add_patron" method="post">
    <label for="patron-first">Patron first name: </label>
    <input type="text" name="patron-first" id="patron-first">
    <label for="patron-last">Patron last name: </label>
    <input type="text" name="patron-last" id="patron-last">
    <button type="submit" class="btn btn-success">Add</button>
</form>


<form action="/patrons/delete" method="post">
    <button type="submit" name="button">Delete all patrons</button>
</form>
